	month = jan,
	year = {2020},
	pmid = {31783059},
	keywords = {Humans, Pain, Models, Nociception, Thermal grill, Illusion, Synthetic heat, TGI, Thermosensation, Illusions, Thermosensing, Biological},
	pages = {472--479},
	file = {Accepted Version:C\:\\Users\\au645332\\Zotero\\storage\\JTXGKMKD\\Fardo et al. - 2020 - Beyond labeled lines A population coding account .pdf:application/pdf},
